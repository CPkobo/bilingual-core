{
  "name": "catovis-office-cli",
  "version": "0.3.4",
  "description": "Tools for Translators, enabling to extract/align/diff/ for MS Office files and etc.",
  "keywords": [
    "translation",
    "MS Office",
    "docx/xlsx/pptx",
    "text-diff"
  ],
  "license": "MIT",
  "homepage": "https://catovis.com",
  "author": {
    "name": "DianziYang",
    "email": "catovis@tuta.io",
    "url": "https://catovis.com"
  },
  "scripts": {
    "build": "npx tsc --build tsconfig.json",
    "start": "node ./dist/index.js",
    "preset": "node ./dist/index.js --preset",
    "preset:yaml": "node ./dist/index.js --preset --yaml",
    "preset:default": "node ./dist/index.js --default-preset",
    "test": "jest"
  },
  "jest": {
    "moduleNameMapper": {
      "^#/(.+)": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.js",
      "**/*.test.ts"
    ]
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.0",
    "@types/jszip": "^3.4.1",
    "@types/node": "^14.14.6",
    "@types/xml2js": "^0.4.5",
    "commander": "^6.2.0",
    "difflib": "^0.2.4",
    "fs": "^0.0.1-security",
    "inquirer": "^7.3.3",
    "js-yaml": "^4.0.0",
    "jszip": "^3.5.0",
    "ts-lint": "^4.5.1",
    "ts-node": "^9.0.0",
    "tsc": "^1.20150623.0",
    "typescript": "^4.0.5",
    "xml2js": "^0.4.23",
    "xmldom": "^0.4.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "jest": "^27.4.3",
    "ts-jest": "^27.0.7"
  }
}
